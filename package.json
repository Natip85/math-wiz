{
  "name": "math-wiz",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "db:push": "turbo -F @math-wiz/db db:push",
    "db:studio": "turbo -F @math-wiz/db db:studio",
    "db:generate": "turbo -F @math-wiz/db db:generate",
    "db:migrate": "turbo -F @math-wiz/db db:migrate",
    "db:start": "turbo -F @math-wiz/db db:start",
    "db:watch": "turbo -F @math-wiz/db db:watch",
    "db:stop": "turbo -F @math-wiz/db db:stop",
    "db:down": "turbo -F @math-wiz/db db:down",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "dependencies": {
    "@math-wiz/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.1",
    "@eslint/js": "^9.39.2",
    "@math-wiz/config": "workspace:*",
    "@types/node": "^22.13.14",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-turbo": "^2.7.5",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.8.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "turbo": "^2.6.3",
    "typescript": "catalog:",
    "typescript-eslint": "^8.53.0"
  },
  "lint-staged": {
    "*.{js,mjs,cjs,jsx,ts,mts,cts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": "prettier --write"
  },
  "packageManager": "pnpm@10.11.1"
}
